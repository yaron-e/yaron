package test;

public class test {
	static String[][] board={ {".", "1", "."}, 
						{"1", "1", "."},
						{"1", ".", "1" } };
	public static void main(String [] args){
		
		System.out.println(print());
		System.out.println("Sum: "+shiftRight());
		System.out.println(print());
		
		
	}
	public static int shiftRight(){
		  int sum=0;
		  for(int i= 0 ; i< board.length; i++){
			  for(int j=1; j< board[0].length; j++){
				  if(board[i][j] == null)continue;
				  if(board[i][j-1] == null){
					  board[i][j-1]=board[i][j];
					  board[i][j] = null;
				  }
				  else if (board[i][j].equals(board[i][j-1])){
					  board[i][j]=null;
					  board[i][j-1] = Integer.parseInt(board[i][j-1])*2 +"";
					  //sum+=board[i][j-1].getScore();
					  sum+= Integer.parseInt(board[i][j-1]);
				  }
					  
			  }
		  }
		  return sum;
	  }
	public static String print(){
		String s="";
		
		for(int i=0; i<board.length; i++){
			for(int j=0; j < board[0].length; j++){
				s+=board[i][j];
			}s+="\n";
		}
		return s;
	}

}
